@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<form asp-action="AddTestimonial">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> New Testimonial </p>
                <div class="form-group">
                    <label>Name and Surname</label>
                    <input type="text" class="form-control" asp-for="@Model.ClientName">
                </div>
                <div class="form-group">
                    <label>Company</label>
                    <input type="text" class="form-control" asp-for="@Model.Company">
                </div>
                <div class="form-group">
                    <label>Image URL</label>
                    <input type="text" class="form-control" asp-for="@Model.Image">
                </div>
                <div class="form-group">
                    <label>Comment</label>
                    <textarea class="form-control" asp-for="@Model.Comment" rows="6"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Save</button>
                <button class="btn btn-dark">Cancel</button>
            </div>
        </div>
    </div>
</form>


