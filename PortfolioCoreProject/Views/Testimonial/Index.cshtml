@using EntityLayer.Concrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Testimonial List</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Name and Surname </th>
                                <th> Company </th>
                                <th> Delete </th>
                                <th> Details </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        <img src="@item.Image" alt="image" />
                                    </td>
                                    <td> @item.ClientName </td>
                                    <td> @item.Company </td>
                                    <td> <a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Delete</a> </td>
                                    <td> <a href="/Testimonial/EditTestimonial/@item.TestimonialID" class="btn btn-outline-info">Details</a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Testimonial/AddTestimonial/" class="btn btn-outline-info">New Testimonial</a>
                </div>
            </div>
        </div>
    </div>
</div>

