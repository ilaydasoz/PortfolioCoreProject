@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminSendMessage";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> New Message </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Subject</label>
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Receiver</label>
                    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Message</label>
                    @Html.TextAreaFor(x => x.MessageContent, 8, 3, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary mr-2">Send</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>
